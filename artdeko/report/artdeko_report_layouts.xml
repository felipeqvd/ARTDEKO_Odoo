<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="comercial_layout">
        <link rel='stylesheet' href="/web/static/src/less/css/fonts.less" type="text/less"/>
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header o_clean_header">
            <div class="row">
                <div class="col-xs-6">
                    <img class="img img-responsive" src="/artdeko/static/src/img/logo_texto.png" width="200px"/>                    
                </div>
                <div class="col-xs-5 col-xs-offset-1" name="company_address">                        
                    <div t-if="company.website"><span t-esc="company.website[7:].upper()"/></div>                 
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>
        <div class="row">            
            <div class="col-xs-2">                
            </div>
            <div class="col-xs-4">
                <ul class="list-inline">
                    <li t-if="company.website"><span t-esc="company.website[10:]"/></li>
                    <li t-if="company.email">WEB<span t-field="company.email"/></li>
                    <li t-if="company.website"><span t-esc="company.phone"/></li>
                    <li t-if="company.email">TELÃ‰FONOS<span t-field="company.email"/></li>                    
                </ul>
            </div>
            <div class="col-xs-6">
            </div>
        </div>
        <div class="footer">            
            <div class="row" style="background-color:rgb(209,65,36);height:100px;">
                <img src="/artdeko/static/src/img/logo_footer.png" height="100px"/>
                <p style="font:'Lato';text-align:center;color:#ffffff;">
                    <span t-field="company.report_header"/>
                </p>
            </div>
        </div>
    </template> 
    
</odoo>
