<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_inherit_artdeko" inherit_id="sale.report_saleorder_document">
      	<xpath expr="//t[@t-foreach='doc.order_lines_layouted()']/table[1]/thead[1]/tr[1]/th[1]" position="before">
        	 <th>Code</th>
      	</xpath>
        <xpath expr="//t[@t-foreach='doc.order_lines_layouted()']/table[1]/thead[1]/tr[1]/th[3]" position="before">
        	 <th>Imagen</th>
      	</xpath>
        <xpath expr="//span[@t-field='l.name']/.." position="before">
        	 <td class="text-right">
                <span t-field="l.product_uom_qty"/>
            </td>
      	</xpath>
        <xpath expr="//span[@t-field='l.price_unit']/.." position="before">
        	 <td class="text-right">
                <img t-att-src="'/artdeko/static/src/img/view_todo_arrow.png'" />
            </td>
      	</xpath>
  	</template>
</odoo>
