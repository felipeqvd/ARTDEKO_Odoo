<odoo>
    <data>
        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.artdeko</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/tree[1]/field[@name='price_unit']" position="after">
                  <field name="discount"/>
                </xpath>
                <field name="notes" position="attributes">
                    <attribute name="placeholder">Observaciones</attribute>
                </field>                
            </field>
        </record>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.artdeko</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/header[1]/button[3]" position="after">
                    <button name="action_purchase_request" id="action_purchase_request"
                        string="Solicitar compra" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['sent'])]}"/>
                    <button name="action_new_purchase" id="action_new_purchase"
                        string="Crear orden de compra" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['sent'])]}"/>
                    <button name="action_invoice_request" id="action_invoice_request"
                        string="Solicitar facturaciÃ³n" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['sent'])]}"/>
                </xpath>
                <field name="note" position="attributes">
                    <attribute name="placeholder">Observaciones</attribute>
                </field>                
            </field>
        </record>
    </data>
</odoo>